<Window x:Class="AsheronBuilder.UI.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="PromptTextBlock" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="InputTextBox" Grid.Row="1" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="60" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>